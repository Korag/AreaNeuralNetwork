<Window x:Class="NeuralNetworkApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeuralNetworkApp.View.UserControls"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" MinHeight="400" MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Weights: " HorizontalAlignment="Center" FontSize="20"/>
            <local:RadioButtonsUserControl Grid.Column="0" x:Name="userCtrl1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Points: " HorizontalAlignment="Center" FontSize="20"/>
            <local:RadioButtonsUserControl Grid.Column="0" x:Name="userCtrl2"/>
        </StackPanel>
        <DockPanel  Grid.Row="1">
            <TabControl>
                <TabItem Header="Points"  />
                <TabItem Header="Weights" />
                <TabItem Header="DValues" />
            </TabControl>
        </DockPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal">
            <StackPanel Margin="10,0,0,0">
                <TextBlock Height="25" Text="C = " HorizontalAlignment="Left" Margin="0,20,0,0" FontSize="20"/>
                <TextBlock Height="25" Text="Number of points = " HorizontalAlignment="Left" Margin="0,40,0,0" VerticalAlignment="Top" FontSize="20"/>
                <TextBlock Height="25" Text="Max iterations = " HorizontalAlignment="Left" Margin="0,60,0,0" VerticalAlignment="Top" FontSize="20"/>
            </StackPanel>
            <StackPanel>
                <TextBox Width="50" Height="25" Margin="0,20,0,0"/>
                <ListBox Width="25" Height="25" Margin="0,40,0,0"/>
                <TextBox Width="50" Height="25" Margin="0,60,0,0"/>
            </StackPanel>
        </StackPanel>
        <Image Grid.Column="2" Grid.RowSpan="2" Stretch="Fill" Source="C:\Users\user\Source\Repos\neural_i\NeuralNetworkApp\NeuralNetworkApp\View\XD\Mkordos.jpg"/>
        <Image Grid.Column="2" Grid.Row="2" Stretch="Fill" Source="C:\Users\user\Source\Repos\neural_i\NeuralNetworkApp\NeuralNetworkApp\View\XD\Zawislak.jpg"/>
        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Center" Text="Messages from application: " FontSize="20" />
        <DataGrid Grid.ColumnSpan="2" Grid.Row="2" Margin="10,30,10,50"/>
        <Button Content="Start" Grid.Row="2" Width="80" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="30,0,0,10"/>
        <Button Content="Stop" Grid.Row="2" Width="80" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,30,10"/>
        <Button Content="Reset" Grid.Column="1" Grid.Row="2" Width="80" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="30,0,0,10"/>
        <Button Content="TXT/PDF" Grid.Column="1" Grid.Row="2" Width="80" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,30,10"/>
    </Grid>
</Window>
