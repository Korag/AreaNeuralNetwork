<UserControl x:Class="NeuralNetworkApp.View.UserControls.DValueUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeuralNetworkApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150" Name="DValueControl">
    <StackPanel Orientation="Horizontal" Margin="10,10,0,10">
        <TextBlock Name="DValueName" Text="{Binding ElementName=DValueControl, Path=DName}" Width="50"/>
        <TextBox Name="DNumbervalue" Text="{Binding ElementName=DValueControl, Path=Dvalue}" Width="50"/>
    </StackPanel>
</UserControl>
