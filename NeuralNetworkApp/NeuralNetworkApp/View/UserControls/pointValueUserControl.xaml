<UserControl x:Class="NeuralNetworkApp.View.UserControls.pointValueUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeuralNetworkApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100" Name="pointValueControl">
    <StackPanel Orientation="Horizontal" Margin="5,5,5,5">
        <StackPanel VerticalAlignment="Center" >
            <TextBlock Name="pointValueTextBlock" Text="{Binding ElementName=pointValueControl, Path=Text1}" Width="50"/>
        </StackPanel>
        <StackPanel Width="50" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBox Name="pointValueTextBox1" Text="{Binding ElementName=pointValueControl, Path=Text2}"/>
                <TextBox Name="pointValueTextBox2" Text="{Binding ElementName=pointValueControl, Path=Text3}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
